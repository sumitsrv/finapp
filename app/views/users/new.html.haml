#user-forms
  #signin
    = simple_form_for :session, {:url => signin_path} do |f|
      = f.input :email, :class => 'textfield', :input_html => {:size => 20}
      = f.input :password, :as => :password
      .line-separator
      = f.button :submit, 'SignIn'
    %label.membership
      %a{:onclick => 'showSignup()'} Not yet a Member?
  #signup
    = simple_form_for @user do |f|
      = f.input :first_name, :input_html => {:size => 20}
      = f.input :last_name, :input_html => {:size => 20}
      = f.input :email, :input_html => {:size => 20}
      = f.input :password, :as => :password
      = f.input :password_confirmation, :as => :password
      .line-separator
      = f.button :submit, 'SignUp'
    %label.membership
      %a{:onclick => 'showSignin()'} Already a Member?

:javascript
  showSignup = function(){
    $('#signup').css('display', 'block'); 
    $('#signin').css('display', 'none');
  }

  showSignin = function(){
    $('#signup').css('display', 'none'); 
    $('#signin').css('display', 'block');
  }
